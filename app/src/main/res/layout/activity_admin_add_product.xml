<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminAddProductActivity">

    <ImageView
        android:id="@+id/iv_add_new_product"
        android:layout_width="350dp"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:cropToPadding="false"
        android:scaleType="centerCrop"
        android:src="@drawable/select_product_image" />

    <EditText
        android:id="@+id/select_product_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_add_new_product"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"
        android:layout_marginTop="6dp"
        android:inputType="textMultiLine"
        android:background="@drawable/inputs"
        android:hint="product name"
        android:padding="20dp" />
    <EditText
        android:id="@+id/select_product_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/select_product_name"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"
        android:layout_marginTop="6dp"
        android:inputType="textMultiLine"
        android:background="@drawable/inputs"
        android:hint="product description"
        android:padding="20dp" />
    <EditText
        android:id="@+id/select_product_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/select_product_description"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"
        android:layout_marginTop="6dp"
        android:inputType="number"
        android:background="@drawable/inputs"
        android:hint="product price"
        android:padding="20dp" />
    <Button
        android:id="@+id/button_add_new_product"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="add product"
        android:layout_below="@+id/select_product_price"

        android:padding="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"
        android:textSize="20sp"
        android:textColor="@android:color/white"

        android:background="@drawable/button"/>

</RelativeLayout>